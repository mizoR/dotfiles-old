## Install dotfiles
# install
$ cd ~
$ git clone https://mizoR@github.com/mizoR/dotfiles.git
$ cd dotfiles
$ git submodule init
$ git submodule update
$ ./setup.sh
$ vim +BundleInstall! +q

## Install rbenv
# install
$ PREFIX=$HOME/local ./ruby-build/install.sh

# cleanup temporary files
$ cd
$ rm -rf ruby-build
$ ruby-build --definitions
$ rbenv install [ruby-version]
$ rbenv global [ruby-version]
$ rbenv rehash
