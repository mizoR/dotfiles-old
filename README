## Install dotfiles
# install
$ cd ~
$ git clone https://mizoR@github.com/mizoR/dotfiles.git
$ cd dotfiles
$ git submodule init
$ git submodule update
$ ./setup.sh
$ vim +BundleInstall! +q

## For ruby
# install ruby-build
$ cd ruby-build
$ PREFIX=$HOME/local ./install.sh
$ echo 'path=($HOME/.rbenv/bin(N) $path)' >> ~/.zshenv.local
$ echo 'eval "$(rbenv init -)"' >> ~/.zshenv.local

# install ruby
$ ruby-build --definitions
$ rbenv install [ruby-version]
$ rbenv global [ruby-version]
$ rbenv rehash
